<resources>
	
	<!-- Base application theme. -->
	<style name="Base.Theme" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/theme_primary_light</item>
		<item name="colorPrimaryDark">@color/theme_primary_dark</item>
		<item name="colorAccent">@color/theme_primary_accent</item>
		<item name="android:windowBackground">@color/theme_window_background</item>
		
		<item name="buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
		
		<item name="android:windowDrawsSystemBarBackgrounds">true</item>
		<item name="android:statusBarColor">@android:color/transparent</item>
	</style>
	
	<style name="ToolBarPopupTheme" parent="ThemeOverlay.AppCompat.Light">
		<!-- 设置Menu菜单的背景色 -->
		<item name="android:itemBackground">@color/md_white_1000</item>
		<!-- 设置Menu菜单的字体颜色 -->
		<item name="android:textColorPrimary">@color/md_black_1000</item>
		<!-- 设置Menu窗口不覆盖Toolbar视图 -->
		<item name="overlapAnchor">false</item>
	</style>
	
	<style name="AppTheme" parent="Base.Theme"/>

</resources>
